<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppGym" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_accent</item>
        <item name="colorPrimaryVariant">@color/secondary_accent</item>
        <item name="colorOnPrimary">@color/background_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Light Theme Adjustments -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <style name="Theme.AppGym" parent="Base.Theme.AppGym">
        <!-- Add Window Animations -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Specific theme for splash or launcher just in case -->
    <style name="Theme.AppGym.NoActionBar" parent="Theme.AppGym">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppGym.Amoled" parent="Theme.AppGym">
        <!-- Pure Black Background -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <!-- Ensure cards also use black or very dark grey if they use colorSurface?
             Material cards default to colorSurface + elevation overlay.
             In pure black, elevation is invisible. We need strokes.
             We can set colorSurface to black.
             Maybe surfaceVariant for cards? -->
        <item name="colorSurfaceVariant">@color/background_dark</item> <!-- #050505 slightly lighter than black -->
    </style>
</resources>