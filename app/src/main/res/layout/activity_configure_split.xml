<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground">

    <TextView
        android:id="@+id/tvSplitTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurar Rutina"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:padding="16dp"
        android:background="@color/surface_dark"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_dark"
        app:tabTextColor="@color/text_secondary"
        app:tabSelectedTextColor="@color/primary_accent"
        app:tabIndicatorColor="@color/primary_accent"
        app:tabMode="scrollable"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerDays"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnActivateSplit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Rutina Final"
        android:backgroundTint="@color/primary_accent"
        android:textColor="@color/white"
        android:layout_margin="16dp"/>

</LinearLayout>
